@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    string reviewScoreWord = "";
}

<h1>Booking Otel Rezervasyon Sayfası</h1>

 

<table class="table table-striped">
    <tr>
        <th>/</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            @{
                if (item.reviewScoreWord == "Very good")
                {
                    <td>Çok İyi</td>
                }
                if (item.reviewScoreWord == "Fabulous")
                {
                    <td>Efsanevi</td>
                }
                if (item.reviewScoreWord == "Exceptional")
                {
                    <td>Olağınüstü</td>
                }
                if (item.reviewScoreWord == "Superb")
                {
                    <td>Süper</td>
                }
            }
            @* <td>@item.reviewScoreWord</td> *@
            <td><a href="/" class="btn btn-outline-primary">Detaylar</a></td>
        </tr>
    }
</table>

