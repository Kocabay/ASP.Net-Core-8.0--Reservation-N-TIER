@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
     int count= 0;
}

<h1>Rol Listesi</h1>



<table class="table table-bordered">
    <tr>
        <th>/</th>
        <th>Rol Adı</th>
        <th>Rolü Sil</th>
        <th>Rolü Güncelle</th>
    </tr>

    @if (Model.Count>0)
    {
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }

    }
    else
    { 
        <tr>
            <td class="alert alert-success">Herhangi Bir rol bulunamadı..</td>
        </tr>
    }

</table>
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Girişi</a>

