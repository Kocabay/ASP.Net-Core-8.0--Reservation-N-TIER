@model TraversalCoreProje.Models.UserRegisterModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Misafir Kayıt</title>
 
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
 
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
 
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Traversal Rezervasyon</h5>
                            <h3>Hesap Oluştur</h3>
                            <p>
                             Deneyimli Rehberlerimiz ile İskandinav Soğukları ile Akdeniz Sıcaklıkları ile  güzel ülkemizin
                             Edirne'den Şırnak'a Kars'tan Muğlaya Ülkemizin dört bir yanından deneyimli rehberlerimiz ile gezmek için bize katıl.
                            </p>
                            <a href="/Login/SıgnIn/" class="read-more-1 btn">Hadi Başlayalım</a>
                        </div>

                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bize Katılın.</h4>
                        <p>Hemen Ücretsiz Hesap Oluştur.</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyad</label>
                            <input type="text" asp-for="Surname" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adı</label>
                            <input type="text" required asp-for="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Mail</label>
                            <input type="text" asp-for="Mail" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre</label>
                            <input type="password" required asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre Tekrar</label>
                            <input type="password" required asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly">

                        </div>
                        <label class="container">
                            Şartları Okudum <a href="#">Kabul Ediyorum.</a> <a href="#">Gizlilik Sözleşmesi İçin Tıklayınız.</a>
                            <input type="checkbox" required>
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Kayıt Ol</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year  Tüm Haklar Sakldıır. | 

                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section>
 
</body>

</html>